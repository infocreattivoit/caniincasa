{
  "manifest_version": 3,
  "name": "Caniincasa Post Creator",
  "version": "1.0.0",
  "description": "Seleziona testo e invialo a Caniincasa.it per creare nuovi post",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.caniincasa.it/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
